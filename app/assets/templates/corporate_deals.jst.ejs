<% var defaultImage = corporate.attributes.profile_image %>

<div class="container">
  <div id="deals-list-holder">

    <div class="list-group">

      <% deals.forEach(function(deal){ %>


        <div class="list-group-item">
          <div class="row">
            <div class="col-md-3">
              <% if(deal.attributes.deal_image){ %>
                <img class="deal-item-image" src=<%= String(deal.attributes.deal_image) %> alt="?" />
              <% }else if(defaultImage){ %>
                <img class="deal-item-image" src=<%= defaultImage %> alt="?" />
              <% }else{ %>
                <img class="deal-item-image" src="https://s3.amazonaws.com/ripe-assets/images/default_corporate_avatar.png" alt="?" />
              <% }%>
            </div>

            <div class="col-md-6">
              <h4> <%= deal.deal_title %></h4>
              <button>Remove Deal</button>

              <p><%= deal.attributes.description %></p>
              <hr>

              <div class="row">
                <div class="col-md-4">
                  <h4>Expire Time:</h4>
                  <p><%= deal.attribtues.expiration %></p>
                </div>

                <div class="col-md-4">
                  <h4>Quantity Left:</h4>
                  <p><%= deal.left() %></p>
                </div>

                <div class="col-md-4">
                  <h4>Quantity Sold:</h4>
                  <p><%= deal.sold() %></p>
                </div>
              </div>
            </div>

            <div class="col-md-3">
              <h3>Current Price: $<%= deal.attributes.price/100 %></h3>
            </div>
          </div>
        </div>





      <% }) %>
    </div>
  </div>
</div>

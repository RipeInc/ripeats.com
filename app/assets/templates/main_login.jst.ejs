<div class="container-fluid">

  <div class="main-form-field">
      <div id="main-form-switch">
      </div>

    <div class="main-form-holder">

      <div id="main-form-holder" class="col-lg-12">
        <form id="login-form" class="form-horizontal col-lg-8">
          <fieldset>

            <div class="login-form-information">
              <h1>Welcome Back to Ripe!</h1>
              <p>Thank you for being a loyal user of our services.</p>
            </div>

            <br>
            <br>

            <div class="form-group">
              <label class="col-lg-3 control-label">Account Name or Email</label>
              <div class="col-lg-7">
                <input class="form-control" name="session[name]" type="text" placeholder="Enter your username, restaurant name, or email">
              </div>
              <br>
            </div>

            <div class="form-group">
              <label class="col-lg-3 control-label">Password</label>
              <div class="col-lg-7">
                <input class="form-control" name="session[password]" type="password" placeholder="Enter the password for your account.">
              </div>
              <br>
            </div>

            <div class="form-group">
              <div class="col-lg-10 col-lg-offset-3">
                <button type="submit" class="btn btn-success">&nbsp&nbspGo To My Accounts&nbsp&nbsp</button>
              </div>
            </div>

          </fieldset>
        </form>
      </div>
    </div>
  </div>

</div>

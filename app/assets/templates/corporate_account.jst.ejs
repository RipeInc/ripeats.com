<div class="container">
  <div class="row" id="corporate-information-row">
    <div class="col-md-4">
      <div id="corporate-avatar-holder">
        <img id="corporate-avatar" src="https://s3.amazonaws.com/ripe-assets/images/default_corporate_avatar.png" alt="?" />
      </div>
      <button id="change-corporate-avatar">Change Profile Picture</button>
      <!-- <input type="filepicker" data-fp-apikey="AemVmvogSsSDQVjTNCjOXz"
      onchange="alert(event.fpfile.url)">
      <input type="datetime-local"> -->
    </div>

    <div class="col-md-8">
      <h2><%= corporate.attributes.corporate_name %></h2>
      <h5><%= corporate.attributes.email %></h5>
      <h5>Ripe Ratings: <%= corporate.ratings().average() %></h5>
      <div id="description-box">
        <button id="change-corporate-description">Change Description</button>
        <% if(corporate.attributes.description){ %>
          <h5><%= corporate.attributes.description %></h5>
        <% }else{ %>
          <h5>You haven't added a description.</h5>
        <% } %>
      </div>
      <div id="contact-box">
        <button id="change-corporate-contact">Change Contact</button>
        <% if(corporate.attributes.corporate_contact){ %>
          <h5><%= corporate.attributes.corporate_contact %></h5>
        <% }else{ %>
          <h5>You haven't added a phone number.</h5>
        <% } %>
      </div>
    </div>

  </div>

  <hr>

  <div class="row" id="corporate-stats-row">
    <div class="col-md-3">
      <p>Items on Menu</p>
      <p> <%= corporate.menuItems().length %>
    </div>

    <div class="col-md-3">
      <p>Active Deals</p>
      <p> <%= corporate.activeDeals().length %></p>
    </div>

    <div class="col-md-3">
      <p>Past Deals</p>
      <p> <%= corporate.expiredDeals().length %></p>
    </div>

    <div class="col-md-3">
      <p>Sold</p>
      <p> <%= corporate.transactions().length %></p>
    </div>
  </div>

  <hr>

  <div class="row" id="corproate-address-row">
    <% var corporateAddress = corporate.address().attributes %>

    <div class="col-md-4">
      <% if(corporateAddress.zip_code){ %>
        <button id="corporate-change-address">Change Address</button>
      <% }else{ %>
        <button id="corporate-add-address">Add an Address</button>
      <% } %>
    </div>

    <div class="col-md-8">
      <% if(corporateAddress.zip_code){ %>
        <h5>Street Address: <%= corporateAddress.street_one %></h5>
        <h5> <%= corporateAddress.street_two %></h5>
        <h5>City: <%= corporateAddress.city %></h5>
        <h5>State: <%= corporateAddress.state %></h5>
        <h5>Zip Code: <%= corporateAddress.zip_code %></h5>
      <% }else{ %>
        <h4>You haven't added an address yet.</h4>
      <% } %>
    </div>
  </div>
</div>

<div class="row">
  <div class="container">

    <div class="modal-form-holder">
      <form id="corporate-new-menu-item-form">
        <h2>Create a New Menu Item</h2>
        <hr>

        <div class="row" style="width: 100%;">
          <div class="col-md-5" style="text-align: center;">
            <div class="form-group">
              <% if(corporate.attributes.profile_image){ %>
                <img id="image-preview" src=<%= String(corporate.attributes.profile_image) %> alt="?"/>
              <% }else{ %>
                <img id="image-preview" src= "https://s3.amazonaws.com/ripe-assets/images/default_corporate_avatar.png" alt="?" />
              <% } %>
              <br>
            </div>

            <button id="newImage" class="btn btn-warning">Upload a Picture for the Item</button>
          </div>
          <div class="col-md-7">
            <div class="row">
              <div class="form-group" style="margin-bottom: 30px;">
                <label class="col-md-4 control-label" for="input-menu-item-name" style="font-size: 20px;">Item Name</label>
                <div class="col-md-8">
                  <input id="input-menu-item-name" class="form-control" name="menu_item[item_name]">
                </div>
                <br>
              </div>

              <div class="form-group" style="margin-bottom: 30px;">
                <label class="col-md-4 control-label" for="input-menu-item-description" style="font-size: 20px;">Description</label>
                <div class="col-md-8">
                  <textarea id="input-menu-item-description" class="form-control" rows="3" name="menu_item[description]"></textarea>
                </div>
              <hr>
              </div>


              <div class="form-group" style="height: inherit; margin-top: 100px;">
                <label class="col-md-4 control-label" for="price-integer" style="font-size: 20px;">Original Price</label>
                <div class="col-md-8">
                  <div class="row">
                    <div class="col-md-1" style="padding: 0px; text-align: center;">
                      <span style="font-size: 28px;">$</span>
                    </div>
                    <div class="col-md-7" style="padding: 0px; text-align: center;">
                      <input id="price-integer" class="form-control" type="number">
                    </div>
                    <div class="col-md-1" style="padding: 0px; text-align: center;">
                      <span style="font-size: 28px;">.</span>
                    </div>
                    <div class="col-md-3" style="padding-left: 0px; text-align: center;">
                      <input id="price-float" class="form-control" type="number" min="0" max="99">
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <hr>

        <div class="row">
          <div class="col-md-12" style="text-align: center;">
            <input class="btn btn-success" type="submit" val="submit">
            <span>&nbsp&nbsp&nbsp</span>
            <button class="btn btn-danger" id="modal-close-button">Cancel</button>
          </div>
        </div>

      </form>
    </div>
  </div>
</div>
